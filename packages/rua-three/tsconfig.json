{
  "compilerOptions": {
    "outDir": "lib/esm",
    "module": "esnext",
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "tslib": [
        "../../node_modules/tslib/tslib.d.ts"
      ]
    }
  },
  "include": [
    "src/**/*.ts*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}